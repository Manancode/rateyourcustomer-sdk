{
    "compilerOptions": {
      "module": "ESNext", // For ESM support
      "outDir": "./dist/esm",
      "target": "ESNext",
      "declaration": true, // Generates .d.ts files
      "declarationDir": "./dist/types",
      "esModuleInterop": true,
      "moduleResolution": "node",
      "jsx": "react",
      "skipLibCheck": true,
      "strict": true
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "dist"]
  }
  